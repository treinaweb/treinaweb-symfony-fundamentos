{% extends "base.html.twig" %}

{% block title %}
    Lista de tarefas
{% endblock %}

{% block body %}
<h1>Lista de tarefas</h1>

<div class="col-sm-12">
  <a href="{{ url("tasks_new") }}" class="btn btn-primary">Criar Tarefa</a> 
</div>

<div class="col-sm-12">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Título</th>
        <th scope="col">Descrição</th>
        <th scope="col">Data</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
    {% for task in tasks %}
      <tr>
        <th scope="row">{{ task.id }}</th>
        <td>{{ task.title }}</td>
        <td>{{ task.description }}</td>
        <td></td>
        <td>
          <a href="{{ url('tasks_show', {id: task.id}) }}">Ver</a>
          <a href="{{ url('tasks_edit', {id: task.id}) }}">Atualizar</a>
        </td>
      </tr>
    {% endfor %}  
    </tbody>
  </table>
</div>
{% endblock %}